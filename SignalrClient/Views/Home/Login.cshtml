@{
    Layout = null;
}
@model SignalrClient.Model.ModelView.LoginModelView
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
    <head>
        <meta charset="utf-8" />
        <title>signalr后台管理</title>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <meta content="" name="description" />
        <meta content="" name="author" />
        <!--全局通用框架样式 begin-->
        <!--全局通用框架样式 begin-->

        <link href="@PlugUrl("SuperUi/superui/base/bootstrap/css/bootstrap.css")" rel="stylesheet" />
        <link href="@PlugUrl("SuperUi/superui/base/font-awesome/css/font-awesome.css")" rel="stylesheet" />
        <link href="@PlugUrl("SuperUi/superui/base/font-awesome/css/fontgstatic.css")" rel="stylesheet" />
        <link href="@PlugUrl("SuperUi/superui/base/simple-line-icons/simple-line-icons.css")" rel="stylesheet" />
        <link href="@PlugUrl("SuperUi/superui/base/bootstrap/css/bootstrap-responsive.css")" rel="stylesheet" />
        <link href="@PlugUrl("SuperUi/superui/base/bootstrap/css/matrix-login.css")" rel="stylesheet" />
        <style type="text/css">
            input {
                font-family: "Microsoft Yahei";
            }

            .control-label {
                color: #B2DFEE;
                padding-left: 4px;
            }
            .input-validation-error {
                border: 1px solid red !important;
            }
            .field-validation-error span {
                color: red;
                font-size:15px

            }
            
        </style>
    </head>
    <body>
        @using (Ajax.BeginForm("Login", new AjaxOptions() { OnSuccess  = "LoginCallBack"}))
        { 
              @Html.ValidationSummary(true)
            <div id="loginbox">
                <div class="control-group normal_text">
                    <h2 style="color:#B2DFEE;font-size:28px;">SignalrCode</h2>
                </div>
                <div class="control-group">
                    <label class="control-label">@Html.DisplayNameFor(c=>c.LoginName)</label>
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on bg_lg"><i class="icon-user" style="font-size:16px;"></i></span>@Html.TextBoxFor(c => c.LoginName)
                        </div>
                        <div style="text-align:center">
                            @Html.ValidationMessageFor(c => c.LoginName)
                        </div>
                        </div>
                </div>
                <div class="control-group2">
                    <label class="control-label">@Html.DisplayNameFor(c=>c.Password)</label>
                    <div class="controls">
                        <div class="main_input_box">
                            <span class="add-on bg_ly"><i class="icon-lock" style="font-size:16px;"></i></span>@Html.TextBoxFor(c=>c.Password)
                        </div>
                        <div style="text-align:center">@Html.ValidationMessageFor(c => c.Password)</div>
                    </div>
                </div>
                <div class="form-actions">

                    <input type="submit" class="btn purple btn-block btn-success" value="登陆">
                </div>
       

             
            </div>
        }
        <script src="@ScriptUrl("jquery-1.8.2.min.js")"></script>
        <script src="@PlugUrl("SuperUi/superui/base/bootstrap/js/bootstrap.js")"></script>
        <script src="@PlugUrl("SuperUi/superui/pages/login/matrix.login.js")"></script>
        <script src="@PlugUrl("Common/CommonJs.js")"></script>
        <script src="@ScriptUrl("jquery.validate.js")"></script>
        <script src="@ScriptUrl("jquery.validate.unobtrusive.js")"></script>
        <script src="@ScriptUrl("jquery.unobtrusive-ajax.min.js")"></script>
      
        <script type="text/javascript">
            function LoginCallBack(result) {
                if (result.State == 0) {
                    window.location ="@Url.Action("Index")";
                } else {
                    alert("登陆失败");//用户名或密码错误
                }
            }
        </script>

    </body>
</html>
